 AC_DEFUN([AC_LOG4CXX_CHECK],
 [

	AC_ARG_WITH([log4cxx],
	   [AS_HELP_STRING([--with-log4cxx=DIR],
		           [prefix of log4cxx $1 @<:@guess@:>@])])dnl


	if test "$with_log4cxx" != "" ; then
		AC_MSG_CHECKING([for log4cxx headers in directory specified $with_log4cxx/include/log4cxx])
		if test -d $with_log4cxx/include/log4cxx ; then
		    	CFLAGS="$CFLAGS -I$with_log4cxx/include/log4cxx"
		    	CPPFLAGS="$CPPFLAGS -I$with_log4cxx/include/log4cxx"			
			AC_MSG_RESULT([log4cxx found])

			AC_MSG_CHECKING([for log4cxx static libraries in directory specified $with_log4cxx])
			if test -f $with_log4cxx/lib/liblog4cxx.a ; then
			    	LDFLAGS="$LDFLAGS $with_log4cxx/lib/liblog4cxx.a"		
				AC_MSG_RESULT([log4cxx library found])
			else
				AC_MSG_ERROR([--with-log4cxx=$with_log4cxx appears to be invalid])
			fi
		else
			AC_MSG_ERROR([--with-log4cxx=$with_log4cxx appears to be invalid])
		fi
	else
		AC_MSG_CHECKING([for log4cxx header in normal directories])
		found_log4cxx_dir=""
		for log4cxx_dir in  /usr/include/log4cxx /usr/local/include/log4cxx 
		do
		  if test -d $log4cxx_dir ; then
		    CFLAGS="$CFLAGS -I$log4cxx_dir"
		    CPPFLAGS="$CPPFLAGS -I$log4cxx_dir"
		    found_log4cxx_dir=" $found_log4cxx_dir -I$log4cxx_dir"
		    break;
		  fi
		done
		if test "$found_log4cxx_dir" != "" ; then
		  AC_MSG_RESULT([found $found_log4cxx_dir])
		else
		  AC_MSG_ERROR([not found])
		fi

		AC_MSG_CHECKING([for log4cxx static library in normal directories])
		found_log4cxx_dir=""
		for log4cxx_dir in  /usr/lib/liblog4cxx.a /usr/local/lib/liblog4cxx.a
		do
		  if test -f $log4cxx_dir ; then
		    LDFLAGS="$LDFLAGS $log4cxx_dir"	
		    found_log4cxx_dir=" $log4cxx_dir"
		    break;
		  fi
		done
		if test "$found_log4cxx_dir" != "" ; then
		  AC_MSG_RESULT([found $found_log4cxx_dir])
		else
		  AC_MSG_ERROR([not found])
		fi
	fi

])

